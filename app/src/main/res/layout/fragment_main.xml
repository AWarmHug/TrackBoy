<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:tag="主页"
            tools:context=".main.MainActivity">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="文字" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="添加LinearLayout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tvDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出现弹框" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cbAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择地址" />

            <EditText
                android:id="@+id/edName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入姓名" />

            <include layout="@layout/item" />

            <include layout="@layout/item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent" />

            <com.warm.demo.widget.ItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.warm.demo.widget.ItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.warm.flowlayout.FlowLayout
                android:id="@+id/flAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </com.warm.flowlayout.FlowLayout>

            <com.warm.demo.widget.ApplyLayout
                android:id="@+id/applyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.warm.demo.widget.ApplyLayout>

        </LinearLayout>
    </ScrollView>

</layout>